
<div class="columns is-centered home">
  <div class="column is-7 has-background-white-ter is-paddingless">
    <% @feeds.each do |photo| %>
      <div class="card mb-5">
        <div class="card-image">
          <figure class="image">
            <%= link_to [photo] do %>
              <%= image_tag photo.image %>
            <% end %>
          </figure>
        </div>
        <div class="card-content">
          <div>
            <%= link_to photo.user.email, [photo.user] %>
          </div>
          <div>
            <%= photo.caption %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="column is-4 pl-6 none">
    <table>
      <tr>
        <td class="image">
            <%= link_to [current_user] do %>
              <%= image_tag current_user.image, class: 'icon_image image is-128x128 is-rounded' if current_user.image.present? %>
            <% end %>
        </td>
        <td>
          <%= link_to current_user.email, [current_user], class: 'navbar-item is-size-5' %>
          <div class="pl-4">
            <%= current_user.name %>
          </div>
        </td>
      </tr>
    </table>
  </div>
</div>
