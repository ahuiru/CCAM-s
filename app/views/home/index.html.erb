<div><%= link_to current_user.email, [current_user], class: 'navbar-item is-size-5' %></div>
<div class="tabs">
  <ul>
    <li>
      <%= link_to '写真投稿', [:new, :photo]%>
    </li>
    <li>
      <%= link_to 'logout', destroy_user_session_path, method: :delete %>
    </li>
  </ul>
</div>





<%# <hr color="#6c757d" size="4px"> %>

<% @feeds.each do |photo| %>
  <div class="card mb-5">
    <div class="card-image">
      <figure class="image">
        <%= link_to [photo] do %>
          <%= image_tag photo.image %>
        <% end %>
      </figure>
    </div>
    <div class="card-content">
      <div>
        <%= link_to photo.user.email, [photo.user] %>
      </div>
      <div>
        <%= photo.caption %>
      </div>
    </div>
  </div>

<% end %>
