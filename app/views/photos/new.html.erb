<div class="new-photo">
  <%= form_with model: @photo, local:true do |f| %>
    <% if @photo.errors.any? %>
      <% @photo.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    <% end %>

    <div class="field">
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.text_area :caption, class: 'textarea', placeholder: '内容' %>
    </div>

    <div class="field">
      <%= f.text_area :comic, class: 'input', placeholder: '漫画名' %>
    </div>

    <%= f.submit '投稿', class: 'button is-info' %>
  <%end%>
</div>
