<p class="is-size-3 logo mb-2">いいねした人</p>
<div class="photo-likes-list">
  <% @likes.each do |like|%>
    <div class="columns is-vcentered chat-partner is-mobile is-tablet is-desktop">
      <div class="is-centered column is-4-desktop is-3-tablet is-2-mobile image is-inline-block">
        <%= link_to user_path(like.user) do %>
          <% if like.user.image.attached? %>
            <%= image_tag like.user.image, class: 'image is-64x64 is-rounded' %>
          <% else %>
            <%= image_tag 'default.jpeg', class: "image is-64x64 is-rounded" %>
          <% end %>
        <% end %>
      </div>
      <div class="photo-likes-text column is-8-desktop is-9-tablet is-10-mobile is-inline-block">
        <%= link_to like.user.name, user_path(like.user) %>
      </div>
    </div>
    <hr>
  <% end %>
</div>
