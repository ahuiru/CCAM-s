<div class="columns is-centered is-mobile is-tablet is-desktop">
  <div class="column is-9-desktop is-10-tablet is-12-mobile">
    <table>
      <tr>
        <td class="image">
          <%= image_tag @user.image, class: 'image is-128x128 is-rounded' if @user.image.present? %>
        </td>
        <td class="pl-5 pt-1">
          <div class="title is-3"><%= @user.name %></div>
          <div class="feature-box pb-4">
            <div class="feature">
              <p>投稿<%= @user.photos.count %>件</p>
            </div>
            <div class="feature">
              <%= link_to user_followers_path(@user) do %>
                <p class="has-text-grey-dark">フォロワー<%= @user.followers.count %>人</p>
              <% end %>
            </div>
            <div class="feature">
              <%= link_to user_followings_path(@user) do %>
                <p class="has-text-grey-dark">フォロー中<%= @user.followings.count %>人</p>
              <% end %>
            </div>
            <div>
              
            </div>
          </div>
          <h5 class="is-size-5 has-text-weight-medium"><%= @user.email %></h5>
          <p class="mb-3"><%= @user.profile %></p>
          <p class="mb-3 has-text-weight-bold">お気に入り漫画：<%= @user.comic %></p>
        </td>
      </tr>
    </table>

    <div id="user_follow_button">
      <% unless current_user == @user %>
        <% if current_user.following?(@user) %>
          <%= render 'relationships/unfollow_button', user: @user %>
        <% else %>
          <%= render 'relationships/follow_button', user: @user %>
        <% end %>
      <% end %>
    </div>


    <div class="tabs">
      <ul>
        <% if @user.id == current_user.id %>
          <li>
            <%= link_to 'likes', [@user, :likes] %>
          </li>
          <li>
            <%= link_to 'edit', edit_user_registration_path %>
          </li>
        <% end %>

      </ul>
    </div>


    <% @user.photos.each do |photo| %>
      <div class="card mb-5 column is-4-mobile is-4-tablet is-gapless user-card">
        <div class="card-image">
          <figure class="image">
            <%= link_to [photo] do %>
              <%= image_tag photo.image %>
            <% end %>
          </figure>
        </div>
      </div>

    <% end %>
  </div>
</div>
