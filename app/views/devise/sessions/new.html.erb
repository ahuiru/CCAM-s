
<div class="columns is-centered session-new pt-5">

  <div class="column is-7">
    <h1 class="has-text-centered title">漫画やアニメでつながるSNS<br>
    あの1シーンをCCAM-sで</h1>
    <div class="login-logo pb-3 pt-3">
      <p class="is-size-4">ログイン</p>
      <%= link_to "新規登録", new_user_registration_path, class:"pt-2 pl-2" %>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input', placeholder:"メールアドレス" %>
      </div>

      <div class="field">
        <%= link_to "パスワードをお忘れですか？", new_user_password_path %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'input', placeholder:"パスワード" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>


      <div class="actions">
        <%= f.submit "ログイン", class: 'button is-info' %>
      </div>
    <% end %>



    <div class="actions">
      <%= link_to 'ゲストログイン', users_guest_sign_in_path, class:"guest-login has-text-white button is-primary", method: :post %>
    </div>
  </div>
</div>
