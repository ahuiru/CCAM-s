<h2 class="is-size-4">パスワードをお忘れですか？</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input mt-3', placeholder:"メールアドレス" %>
  </div>

  <div class="actions">
    <%= f.submit "ログインのリセットメールを送る", class:"button is-info" %>
  </div>
<% end %>

<%= link_to "新規登録", new_user_registration_path, class:"pl-4" %>
<%= link_to "ログイン画面", new_user_session_path, class:"pl-4" %>
