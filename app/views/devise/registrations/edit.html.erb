
<div class="has-background-white edit-page">
  <h1>プロフィール編集</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :image, 'プロフィール写真' %><br/>
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.label :email, 'メールアドレス' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
    </div>

    <div class="field">
      <%= f.label :name, 'ユーザーネーム' %><br />
      <%= f.text_field :name, autocomplete: "name", class: 'input' %>
    </div>

    <div class="field">
      <%= f.label :profile, '自己紹介' %><br />
      <%= f.text_area :profile, autofocus: true, class: 'input' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, 'パスワード' %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
      <% if @minimum_password_length %>
        <br />
        <em>※<%= @minimum_password_length %>文字以上</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'パスワード確認' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
    </div>

    <div class="field">
      <%= f.label :current_password, '現パスワード' %><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'input' %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class:"button is-primary" %>
    </div>
  <% end %>


  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class:"button is-primary mt-3", method: :delete %>

  <%= link_to "Back", :back %>
</div>
