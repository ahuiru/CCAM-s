
<div class="columns is-vcentered is-centered search pt-5 is-mobile is-tablet is-desktop">
  <div class="column is-4-desktop mr-5">
    <h1>Search</h1>
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <div class="field">
        <%= f.text_field :keyword, class: 'input' %>
      </div>
        <%= f.submit :search, class:'button is-primary' %>
    <% end %>
  </div>
</div>

<div class="columns is-vcentered is-centered search pt-5 is-mobile is-tablet is-desktop">
  <div class="column is-5">
    <tr>
      <td class="pt-2">
        <% @users.each do |user| %>
          <a href="/users/<%= user.id %>" class="columns image is-centered">
            <% if user.image.attached? %>
              <%= image_tag user.image, class:"image is-64x64 is-rounded column is-4" %>
            <% else %>
              <%= image_tag 'default.jpeg', class: "image is-64x64 is-rounded column is-4" %>
            <% end %>
            <div class="column pt-4">
              <%= user.name %>
            </div>
          </a>
        <% end %>
      </td>
      <td class="pt-2">
        <div class="column is-7 has-background-white-ter is-paddingless">
          <% @photos.each do |photo| %>
            <div class="card mb-5">
              <div class="card-image">
                <figure class="image">
                  <%= link_to [photo] do %>
                    <%= image_tag photo.image %>
                  <% end %>
                </figure>
              </div>
              <div class="card-content">
                <div>
                  <%= link_to photo.user.email, [photo.user] %>
                </div>
                <div>
                  <p><%= photo.caption %></p>
                </div>
                <div>
                  <p>漫画:<%= photo.comic %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </td>
    </tr>
  </div>
</div>
