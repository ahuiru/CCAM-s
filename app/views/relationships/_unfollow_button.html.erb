




<div class="columns">
  <div class="follow-button column is-6">
    <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }, remote: true) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <div class="colmuns">
        <%= f.submit 'Following', class: 'btn btn-danger btn-block button is-dark column is-12 mb-3' %>
      </div>
    <% end %>
  </div>

  <div class="chat_link column is-6">
    <% if @user.id == current_user.id %>
    <% else %>
      <% if @isRoom == true %>
        <%= link_to room_path(@roomId) do %>
          <p class="chat-button btn btn-block button is-dark column is-12 mb-3">DM</p>
        <% end %>
      <% else %>
        <%= form_for @room do |f| %>
          <%= fields_for @entry do |e| %>
            <%= e.hidden_field :user_id, :value=> @user.id %>
          <% end %>
          <p><%= f.submit "メッセージを送る", class:"chat-button btn btn-block button is-primary column is-12 mb-3" %></p>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
