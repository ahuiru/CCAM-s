<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <div class="colmuns">
        <%= f.submit 'Following', class: 'btn btn-danger btn-block button is-dark column is-12 mb-3' %>
      </div>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <div class="colmuns">
        <%= f.submit 'Follow', class: 'btn btn-success btn-block button is-primary column is-12 mb-3' %>
      </div>
    <% end %>
  <% end %>
<% end %>
